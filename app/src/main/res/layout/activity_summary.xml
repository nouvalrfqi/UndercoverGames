<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="16dp">

    <!-- Winner Title -->
    <TextView
        android:id="@+id/winner_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Civilians Win!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Word Reveal Section -->

    <!-- Undercover Word -->
    <TextView
        android:id="@+id/word_reveal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Word Reveal"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/winner_text" />

    <ImageView
        android:id="@+id/undercover_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/skull"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/word_reveal_title"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Civilian Word -->

    <TextView
        android:id="@+id/undercover_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Iron Man"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/undercover_icon"
        app:layout_constraintStart_toEndOf="@id/undercover_icon"
        app:layout_constraintTop_toTopOf="@id/undercover_icon" />

    <ImageView
        android:id="@+id/civilian_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/pumpkin"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/undercover_icon"
        app:layout_constraintStart_toStartOf="parent"
         />

    <!-- Player List Section -->

    <TextView
        android:id="@+id/civilian_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Spider-Man"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/civilian_icon"
        app:layout_constraintStart_toEndOf="@id/civilian_icon"
        app:layout_constraintTop_toTopOf="@id/civilian_icon"
         />

    <!-- Player 1 -->
    <TextView
        android:id="@+id/player_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Players"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/civilian_icon" />

    <ImageView
        android:id="@+id/player1_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="115dp"
        android:src="@drawable/skull"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/player_list_title"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/player1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1"
        android:layout_marginStart="80dp"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@id/player1_icon"
        app:layout_constraintTop_toTopOf="@id/player1_icon"
        app:layout_constraintBottom_toBottomOf="@id/player1_icon" />

    <!-- Player 2 -->
    <ImageView
        android:id="@+id/player2_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/pumpkin"
        android:layout_marginStart="115dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/player1_icon"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/player2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2"
        android:layout_marginStart="80dp"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@id/player2_icon"
        app:layout_constraintTop_toTopOf="@id/player2_icon"
        app:layout_constraintBottom_toBottomOf="@id/player2_icon" />

    <!-- Player 3 -->
    <ImageView
        android:id="@+id/player3_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/pumpkin"
        android:layout_marginStart="115dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/player2_icon"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/player3_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 3"
        android:layout_marginStart="80dp"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@id/player3_icon"
        app:layout_constraintTop_toTopOf="@id/player3_icon"
        app:layout_constraintBottom_toBottomOf="@id/player3_icon" />

    <!-- Player 4 -->
    <ImageView
        android:id="@+id/player4_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="115dp"
        android:src="@drawable/pumpkin"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/player3_icon"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/player4_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 4"
        android:layout_marginStart="80dp"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@id/player4_icon"
        app:layout_constraintTop_toTopOf="@id/player4_icon"
        app:layout_constraintBottom_toBottomOf="@id/player4_icon" />

    <!-- Player 5 -->
    <ImageView
        android:id="@+id/player5_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/pumpkin"
        android:layout_marginStart="115dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/player4_icon"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/player5_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:text="Player 5"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@id/player5_icon"
        app:layout_constraintTop_toTopOf="@id/player5_icon"
        app:layout_constraintBottom_toBottomOf="@id/player5_icon" />

    <!-- OK Button -->
    <ImageButton
        android:id="@+id/ok_button"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Continue to Game"
        android:src="@drawable/ok_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>