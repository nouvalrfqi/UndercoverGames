<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.undercover">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">

        <!-- MainActivity sebagai launcher activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ConfigActivity -->
        <activity
            android:name=".ConfigActivity"
            android:exported="false" />

        <!-- InstructionActivity -->
        <activity
            android:name=".InstructionActivity"
            android:exported="false">
        </activity>

        <!-- CardSelectionActivity (Placeholder untuk halaman pemilihan kartu) -->
        <activity
            android:name=".CardSelectionActivity"
            android:exported="false" />

        <activity
            android:name=".DescribeWordActivity"
            android:exported="false" />

        <activity
            android:name=".DescriptionTimeActivity"
            android:exported="false" />

        <activity
            android:name=".EliminationTimeActivity"
            android:exported="false" />

        <activity
            android:name=".SummaryActivity"
            android:exported="false" />

    </application>

</manifest>